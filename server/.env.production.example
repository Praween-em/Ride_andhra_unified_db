# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Database Configuration
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=ride_andhra
DB_SSL=true
DB_SYNCHRONIZE=false

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-min-32-characters-long
JWT_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-panel.com

# MSG91 Configuration (OTP)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_WIDGET_ID=your_widget_id
MSG91_TOKEN_AUTH=your_token_auth

# PhonePe Configuration
PHONEPE_MERCHANT_ID=your_merchant_id
PHONEPE_SALT_KEY=your_salt_key
PHONEPE_SALT_INDEX=1
PHONEPE_CALLBACK_URL=https://your-backend-url.com/phonepe/callback
PHONEPE_REDIRECT_URL=https://your-app-url.com/payment-status

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token_here

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
